{
	"name": "template",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --host --open",
		"build": "vite build --mode production",
		"build-preprod": "set NODE_ENV=production && vite build --mode preproduction",
		"build-prod": "vite build --mode production",
		"preview-dist": "vite preview --host",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
		"browserslist": "npx browserslist",
		"browserslist-update": "npx browserslist --update-db",
		"build_devextreme_theme": "npx devextreme-cli build-theme --input-file src/DevExtreme/Extensions/Themes/metadata.base.json --output-file src/DevExtreme/Extensions/Themes/generated/theme.base.css && npx devextreme-cli export-theme-vars --input-file src/DevExtreme/Extensions/Themes/metadata.base.json --output-file src/DevExtreme/Extensions/Themes/generated/variables.base.scss",
		"test": "vitest"
	},
	"dependencies": {
		"@azure/msal-browser": "3.13.0",
		"@fontsource/nunito": "5.0.18",
		"@fontsource/roboto": "5.0.13",
		"@fwaeu/fontawesome-pro": "file:./local_packages/fwaeu/fontawesome-pro",
		"@intlify/shared": "9.13.1",
		"@microsoft/signalr": "8.0.0",
		"@sentry/tracing": "7.112.2",
		"@sentry/vue": "7.112.2",
		"@vee-validate/i18n": "4.12.6",
		"@vee-validate/rules": "4.12.6",
		"@vuepic/vue-datepicker": "5.4.0",
		"@vueuse/core": "10.9.0",
		"@vueuse/math": "10.9.0",
		"axios": "0.28.1",
		"devextreme-aspnet-data-nojquery": "3.0.0",
		"devextreme-vue": "23.2.5",
		"exceljs": "4.4.0",
		"jwt-decode": "4.0.0",
		"lodash": "4.17.21",
		"noty": "3.1.4",
		"nprogress": "0.2.0",
		"primeflex": "3.3.1",
		"purecss": "2.1.0",
		"sass": "1.75.0",
		"vee-validate": "4.12.6",
		"vue": "3.4.26",
		"vue-content-loader": "2.0.1",
		"vue-i18n": "9.13.1",
		"vue-router": "4.3.2",
		"vue-wait": "1.5.3",
		"vue-word-highlighter": "1.2.4"
	},
	"devDependencies": {
		"@babel/core": "7.24.5",
		"@babel/eslint-parser": "7.24.5",
		"@fwaeu/eslint-plugin-custom-rules": "file:./local_packages/fwaeu/eslint-plugin-custom-rules",
		"@fwaeu/vite-plugin-app-settings-json": "file:./local_packages/fwaeu/vite-plugin-app-settings-json",
		"@fwaeu/vite-plugin-uilibrary-switch": "file:./local_packages/fwaeu/vite-plugin-uilibrary-switch",
		"@intlify/unplugin-vue-i18n": "4.0.0",
		"@types/node": "20.12.7",
		"@vitejs/plugin-vue": "5.0.4",
		"@vue/test-utils": "2.4.5",
		"esbuild": "0.20.2",
		"eslint": "8.57.0",
		"eslint-plugin-vue": "9.25.0",
		"jest-editor-support": "31.1.2",
		"jsdom": "24.0.0",
		"primeicons": "7.0.0",
		"primevue": "3.52.0",
		"typescript": "5.4.5",
		"vite": "5.2.10",
		"vite-plugin-checker": "0.6.4",
		"vite-plugin-pwa": "0.19.8",
		"vitest": "1.5.2"
	},
	"overrides": {
		"vue": "3.4.26"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"es2022": true,
			"browser": true
		},
		"plugins": [
			"@fwaeu/custom-rules"
		],
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended"
		],
		"rules": {
			"@fwaeu/custom-rules/no-local-storage": "error",
			"no-prototype-builtins": "off",
			"no-useless-escape": "off",
			"no-mixed-spaces-and-tabs": "off",
			"no-debugger": "warn",
			"require-atomic-updates": "off",
			"vue/valid-v-for": "warn",
			"vue/require-v-for-key": "warn",
			"no-unused-vars": [
				"error",
				{
					"vars": "all",
					"args": "none",
					"ignoreRestSiblings": false
				}
			]
		},
		"parserOptions": {
			"requireConfigFile": false,
			"parser": "@babel/eslint-parser"
		}
	},
	"browserslist": [
		"last 2 firefox versions",
		"last 2 chrome versions",
		"last 2 edge versions",
		"last 2 safari versions"
	]
}
